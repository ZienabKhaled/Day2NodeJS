<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="./style.css" />
    <title>Task1</title>
  </head>
  <body>
    <nav class="navbar navbar-light bg-light">
        <div class="container-fluid">
          <a class="navbar-brand ms-5">My Book Store</a>
          <form class="d-flex" action="/home" role="search">
            <input class="form-control me-2" style="width:300px" type="search" name="q" placeholder="What book are you searching for?" aria-label="Search">
            <button class="btn btn-outline-dark" type="submit">Search</button>
          </form>
        </div>
      </nav>
    
    <div class="container">
      <h1
        style="
          color: black;
          text-align: center;
          margin-bottom: 20px;
          margin-top: 10px;
          font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        "
      >
        All Books
      </h1>
      <table>
        <tr>
          <th>Book Name</th>
          <th>Book Author</th>
          <th>Delete</th>
          <th>Update</th>
        </tr>
        <% data.forEach(element=> { %>
        <div class="elements">
          <tr>
            <td><%= element.BookName %></td>
            <td><%= element.BookAuthor %></td>
            <td>
              <form action="/delete" method="post">
                <input
                  type="text"
                  style="display: none"
                  name="BookName"
                  value="<%= element.BookName %>"
                />
                <button type="submit">Delete</button>
              </form>
            </td>
            <td>
              <button>
                <a
                  style="color: black"
                  href="/updatebook?BookName=<%=element.BookName%>"
                  >Update</a
                >
              </button>
            </td>
          </tr>
        </div>
        <% }) %>
        <tr></tr>
      </table>
      <h2 style="color: rgb(184, 149, 216)">Add Book</h2>
      <form action="/" method="post">
        <input type="text" placeholder="Book Name"  style="
        height: 40px;
        width: 40%;
        color: aliceblue;
        font-size: 10px;
        border: 1px solid white;
        border-radius: 3px;"
      name="BookName" />
        <input type="text" placeholder="Book Author"  style="
        height: 40px;
        width: 40%;
        margin-bottom: 15px;
        border-radius: 8px;
        text-align: center;
        font-size: 20px;
      "name="BookAuthor" />
        <button type="submit"  style="width:10%">Add</button>
      </form>
    </div>
  </body>
</html>
